{
  "name": "klaxoon-test-technique",
  "version": "1.0.0",
  "repository": "git@github.com:VincentPeraud/bookmarks.git",
  "author": "Vincent PERAUD <vincent.peraud@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch src -e js,ts,json --exec \"ts-node src/index.ts\"",
    "build": "tsup src/index.ts --format cjs --clean",
    "start": "ts-node src/index.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "pretest": "NODE_ENV=test yarn typeorm schema:drop -d src/data-source.ts && NODE_ENV=test yarn typeorm migration:run -d src/data-source.ts",
    "test": "NODE_ENV=test mocha -r ts-node/register 'tests/**/*.ts' --timeout 10000 --exit",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "yarn typeorm migration:generate src/migrations/Migration -d src/data-source.ts",
    "migration:run": "yarn typeorm migration:run -d src/data-source.ts",
    "postmigration:generate": "eslint src/migrations/**/*.ts --fix"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.3.1",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-node": "10.7.0",
    "tsconfig-paths": "^3.14.1",
    "tsup": "^5.12.6",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-basic-auth": "^1.2.1",
    "mysql": "^2.18.1",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.6"
  }
}
